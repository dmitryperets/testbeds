
config system global
  set timezone 28
  set admintimeout 480
end

config system interface
# need port1 to be static for exec vm-license to work
 edit port1
  set vdom "root"
  set mode static
  set ip 192.168.$N.$M/16
  set allowaccess ping https http ssh
 next
 edit port2
  set vdom "root"
  set mode static
  set ip 172.18.$N.$M/16
  set allowaccess ping https http ssh fgfm
  set defaultgw disable
 next
 edit port3
  set mode static
  set ip 172.19.$N.$M/16
  set allowaccess ping https http ssh fgfm
  set defaultgw disable
 next
 edit port4
  set mode static
  set ip 10.$N.$M.1/24
  set allowaccess ping
  set defaultgw disable
 next
 edit port5
  set mode static
  set ip 10.$NN.$M.1/24
  set allowaccess ping
  set defaultgw disable
 next

end

config router static
    edit 1
        set gateway 172.18.0.254
        set device "port2"
    next
    edit 2
        set gateway 172.19.0.254
        set device "port3"
   next
end

config firewall policy
    edit 1
        set name "internet"
        set srcintf "port4" "port5"
        set dstintf "port2" "port3"
        set srcaddr "all"
        set dstaddr "all"
        set action accept
        set schedule "always"
        set service "ALL"
        set nat enable
    next
end


 
config system admin
  edit "admin"
  set password fortinet
  set ssh-public-key1 "$SSHKEY"
  next
end
config system global
    set hostname site-$N-$M
end


exec vm-license $TOKEN